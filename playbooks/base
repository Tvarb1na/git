---
- name: Prosto zadaniy dly obucheniy
  hosts: all
  become: yes

  tasks:
  - name: Ping all servers
    ping:

  - name: Update apt packages
    ansible.builtin.apt:
      update_cache: yes
      name: "*"
      state: latest

  - name: Get vim curl htop
    ansible.builtin.apt:
      name:
      - vim
      - htop
      - curl
      state: latest

  - name: Set time zone
    ansible.builtin.timezone:
      name: Europe/Moscow
