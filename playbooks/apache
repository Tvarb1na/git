---
- name: Install Apache and Upload my Web Page
  hosts: all
  become: true

  vars:
    source_file: /infra/index.html
    destination_file: /var/www/html

  tasks:
    - name: Install Apache WebServer
      apt:
        name: apache2
        state: latest

    - name: Auto start server
      service:
        name: apache2
        state: started
        enabled: true

    - name: Change start page
      copy:
        src: "{{ source_file }}"
        dest: "{{ destination_file }}"
        mode: '0555'
      notify: Restart server

  handlers:
    - name: Restart server
      service:
        name: apache2
        state: restarted
